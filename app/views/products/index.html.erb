<p id="notice"><%= notice %></p>

<h1 class='title' >All Products</h1>

<table class='container'>
  <!-- <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Quantity</th>
      <th>Fandom</th>
    </tr>
  </thead> -->

  <tbody class='level'>
    <% @products.each do |product| %>
    <tr>
      <td class='level-item'><%= link_to product.image.attached? ? image_tag(product.image, style: 'height: 150px') : '', product %> </td>
      <td class='level-item'><strong><%= product.title %></td>
      <td class='hide'><%= product.description.first(200) %> <%= link_to '... Show More', product %></strong></td>
      <td class='level-item'>Price: <%= number_to_currency(product.price) %></td>
      <td class='level-item'>Condition: <%= product.condition %></td>
      <td class='level-item'>Quantity: <%= product.quantity %></td>
      <td class='level-item'>Fandom: <%= link_to Category.find(product.category_id).category, category_path(product.category_id) %></td>
      <!-- <td  class='button is-primary'><%= link_to 'Show', product %></td> -->
      <!-- if current user is the owner of the product or the admin - show the edit and destroy paths -->
      <% if user_signed_in? && product.can_edit?(current_user) %>
      <td class='button is-warning level-item'><%= link_to 'Edit', edit_product_path(product) %></td>
      <td class='button is-danger level-item'><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>