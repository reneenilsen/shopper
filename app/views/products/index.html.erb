<p id="notice"><%= notice %></p>

<h1 class='title'>All Products</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Quantity</th>
      <th>Fandom</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td class=''><%= link_to product.image.attached? ? image_tag(product.image, height: 20) : '', product %> </td>
      <td><%= product.title %></td>
      <td><%= product.description.first(200) %> <%= link_to '... Show More', product %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= product.condition %></td>
      <td><%= product.quantity %></td>
      <td><%= link_to Category.find(product.category_id).category, category_path(product.category_id) %></td>
      <td><%= link_to 'Show', product %></td>
      <!-- if current user is the owner of the product or the admin - show the edit and destroy paths -->
      <% if user_signed_in? && product.can_edit?(current_user) %>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>