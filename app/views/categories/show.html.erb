<h1 class='title'><%= @category.category %></h1>

        <section class='products'>
        <% Product.where(category_id: @category.id).each do |product| %>
          <ul class="results">
            <li class=''><%= link_to product.image.attached? ? image_tag(product.image, style: 'height: 150px') : '', product %> </li>
            <li class=''><strong><%= product.title %></li>
            <li class=''><%= product.description.first(50) %> <%= link_to '... Show More', product %></strong></li>
            <li class=''>Price: <%= number_to_currency(product.price) %></li>
            <li class=''>Condition: <%= product.condition %></li>
            <li class=''>Quantity: <%= product.quantity %></li>
            </ul>
          <% end %>
        </section>